{
  "id": "mapper",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "jmspring/marker-mapper:latest",
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 0, "containerPort": 8080, "servicePort": 10080 }
      ],
      "forcePullImage": true
    }
  },
  "env": {
    "MAPBASE_KEY": "pk.eyJ1Ijoiam1zcHJpbmciLCJhIjoiY2luMGl1b2FjMDllZHZsbTRhN3hybWp0eSJ9.KI0FDq_c4jeB2YgmlDw_6Q",
    "PORT": "8080",
    "FETCH_HOST": "marathon-lb-internal.marathon.mesos",
    "FETCH_PORT": "10031",
    "DEPLOY_TIME": "##TIME##"
  },
  "instances": 1,
  "cpus": 0.25,
  "mem": 256,
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/",
    "portIndex": 0,
    "timeoutSeconds": 10,
    "gracePeriodSeconds": 10,
    "intervalSeconds": 2,
    "maxConsecutiveFailures": 10
  }],
  "labels": {
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_PORT": "8080",
    "HAPROXY_0_BACKEND_HTTP_OPTIONS": "  option forwardfor\n  option http-server-close\n  option forceclose\n  http-request set-header X-Forwarded-Port %[dst_port]\n  http-request add-header X-Forwarded-Proto https if { ssl_fc }\n  timeout queue 5000\n  timeout server 86400000\n  timeout connect 5000\n",
    "HAPROXY_0_BACKEND_HEAD": "\nbackend mapper_8080\n  balance source\n  mode http\n"

  }
}